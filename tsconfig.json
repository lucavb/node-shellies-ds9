{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2015", "es2016", "es2017", "es2018"],
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020"
    },
    "include": ["src/"],
    "exclude": ["**/*.spec.ts"]
}
